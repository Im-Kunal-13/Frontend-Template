{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@assets*": ["assets*"],
            "@components*": ["components*"],
            "@constants*": ["constants*"],
            "@hoc*": ["hoc*"],
            "@utils*": ["utils*"],
            "@styles*": ["styles*"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "assets/indextjs"],
    "exclude": ["node_modules"]
}
